{
  "name": "stable-state",
  "author": "John Ralston",
  "description": "Stable-State is a simple but extremely powerful state management facility for ReactJS applications. It promotes and facilitates keeping 100% of the business logic out of React components and custom hooks. Instead it allows all logic to be in vanella TypeScript/JavaScript files. This massively reduces application complexity. It also dramatically simplifies unit testing.",
  "homepage": "https://github.com/JohnERalston/stable-state",
  "version": "0.0.1",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watchAll --coverage",
    "test:coverage": "tsdx test --coverage",
    "test:badges": "jest-coverage-badges output ./media",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/stable-state.esm.js",
  "size-limit": [
    {
      "path": "dist/stable-state.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/stable-state.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "husky": "^8.0.3",
    "jest-coverage-badges": "^1.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "React",
    "State Manager",
    "Stable State",
    "stable-state"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "example"
    ],
    "coverageReporters": [
      "json-summary",
      "text"
    ]
  }
}
